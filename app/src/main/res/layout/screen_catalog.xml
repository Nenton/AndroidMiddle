<?xml version="1.0" encoding="utf-8"?>
<com.nenton.androidmiddle.ui.screens.catalog.CatalogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/product_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_wrap"
            android:layout_alignParentTop="true">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/btn_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circle_indicator"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:ci_drawable="@drawable/circle_ind"
                app:ci_drawable_unselected="@drawable/circle_ind_un"/>

            <Button
                android:id="@+id/add_to_card_btn"
                style="@style/CustomButton"
                android:layout_marginBottom="16dp"

                android:text="В корзину"
                android:theme="@style/StartBtn"/>
        </LinearLayout>
    </RelativeLayout>



</com.nenton.androidmiddle.ui.screens.catalog.CatalogView>