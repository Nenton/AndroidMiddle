<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_normal_16"
    android:paddingLeft="@dimen/spacing_normal_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:src="@drawable/ic_room_24dp"
            android:layout_marginRight="@dimen/spacing_normal_16"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/label_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Название места"
                android:textSize="@dimen/font_small_12"
                android:layout_marginTop="@dimen/spacing_small_8"/>
            <TextView
                android:id="@+id/address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ул. Жукова"
                android:textColor="#323232"
                android:textSize="@dimen/font_medium_16"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/label_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Комментарий"
                android:textSize="@dimen/font_small_12"
                android:layout_marginTop="@dimen/spacing_small_8"/>
            <TextView
                android:id="@+id/comment_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="no comments"
                android:textColor="#323232"
                android:textSize="@dimen/font_medium_16"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>