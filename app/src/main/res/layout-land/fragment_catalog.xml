<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.nenton.androidmiddle.ui.fragments.CatalogFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/product_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_wrap"
        android:layout_toLeftOf="@id/circle_indicator"/>

    <LinearLayout
        android:id="@+id/btn_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_toLeftOf="@id/circle_indicator">

        <Button
            android:id="@+id/add_to_card_btn"
            style="@style/CustomButton"
            android:theme="@style/StartBtn"
            android:layout_marginBottom="16dp"
            android:text="В корзину"/>
    </LinearLayout>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle_indicator"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        app:ci_orientation="vertical"
        app:ci_drawable="@drawable/circle_ind"
        app:ci_drawable_unselected="@drawable/circle_ind_un"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
